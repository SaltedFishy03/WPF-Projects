<Window x:Class="lille_lommeregner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lille_lommeregner"
        mc:Ignorable="d"
        Title="Lille lommerenger" Height="190" Width="350" MinWidth="350" MinHeight="190">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBox
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Name="tb_tal1"
            VerticalAlignment="Top"
            HorizontalAlignment="Stretch"
            Margin="5,10,10,0"/>

        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            Name="symbol"
            VerticalAlignment="Top"
            HorizontalAlignment="Stretch"
            Margin="2,10,2,0"
            Text=""/>
            

        <TextBox
            Grid.Row="0"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            Name="tb_tal2"
            VerticalAlignment="Top"
            HorizontalAlignment="Stretch"
            Margin="5,10,10,0"/>


           
        <TextBox
            Grid.Row="1"
            Grid.ColumnSpan="4"
            Name="tb_resultat"
            VerticalAlignment="Top"
            HorizontalAlignment="Stretch"
            Margin="5,5,10,0"/>

        <Button
           Grid.Row="2"
           Name ="btn_plus"
           Content="+"
           VerticalAlignment="top"
           HorizontalAlignment="right"
           Margin="0,25,10,0"
           Width= "80"
           Height="20"
           Click="plus_click"/>

        <Button
           Grid.Row="2"
           Grid.Column="1"
           Name ="btn_minus"
           Content="-"
           VerticalAlignment="top"
           HorizontalAlignment="right"
           Margin="0,25,10,0"
           Width= "80"
           Height="20"
           Click="minus_click"/>


        <Button
           Grid.Row="2"
           Grid.Column="2"
           Name ="btn_gange"
           Content="*"
           VerticalAlignment="top"
           HorizontalAlignment="right"
           Margin="0,25,10,0"
           Width= "80"
           Height="20"
           Click="gange_click"/>


        <Button
           Grid.Row="2"
           Grid.Column="3"
           Name ="btn_division"
           Content="/"
           VerticalAlignment="top"
           HorizontalAlignment="right"
           Margin="0,25,10,0"
           Width= "80"
           Height="20"
           Click="division_click"/>
    </Grid>
</Window>
